<resources>

    <!-- Vertical Divider. -->
    <style name="VerticalDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>


    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:navigationBarColor">@color/primaryLightColor</item>
        <item name="alertDialogTheme">@style/AppCompatAlertDialogStyle</item>
    </style>

    <!-- Activity with no Title -->
    <style name="ThemeOverlay.MyNoTitleActivity" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Dark Buttons -->
    <style name="ThemeOverlay.MyDarkButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="colorButtonNormal">@color/secondaryColor</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <!-- Tittle text -->
    <style name="ThemeOverlay.MyTitleText." parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">48sp</item>
    </style>

    <!-- Little text -->
    <style name="ThemeOverlay.MyTitleText" parent="AppTheme">
        <item name="android:gravity">center</item>
        <item name="android:textSize">36sp</item>
    </style>

    <!-- Bottom navigation bar -->
    <style name="BottomNavigationStyle" parent="AppTheme">
        <item name="android:background">@android:color/white</item>
        <item name="itemIconTint">@android:color/black</item>
        <item name="itemTextColor">@android:color/black</item>
    </style>

    <!-- Tool bar -->
    <style name="ThemeOverlay.AppCompat.ActionBar" parent="AppTheme">
        <item name="android:background">@color/primaryColor</item>
    </style>


    <!-- Dialog theme -->
    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">#FFCC00</item>
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:background">#5fa3d0</item>
    </style>

</resources>
