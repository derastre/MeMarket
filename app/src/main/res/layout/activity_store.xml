<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.me_market.android.memarket.StoreActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/store_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp"
        app:contentPadding="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/companyName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE EMPRESA" />

            <TextView
                android:id="@+id/storeName"
                style="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="NOMBRE SUCURSAL" />

            <TextView
                android:id="@+id/storeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DIRECCION" />

            <TextView
                android:id="@+id/storePhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TELEFONO" />
            
           <Button
               android:id="@+id/select_this_store_button"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="@string/select_store"
               style="?attr/borderlessButtonStyle"
               android:textColor="@color/secondaryDarkColor"
               android:layout_gravity="end"
               />

        </LinearLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>
