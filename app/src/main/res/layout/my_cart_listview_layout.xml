<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:id="@+id/my_cart_layout">

    <ImageView
        android:id="@+id/cart_product_image"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/cart_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arroz blanco"
            android:textSize="16sp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/cart_product_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="Cereales basicos"/>
    </LinearLayout>

    <TextView
        android:id="@+id/cart_product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:text="$5.00"/>

    <Button
        android:id="@+id/cart_product_delete_button"
        android:drawableTop="@drawable/ic_delete_black_24dp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        style="@style/Base.Widget.AppCompat.Button.Borderless"/>

</LinearLayout>