<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    app:cardElevation="5dp"
    app:contentPadding="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/product_image_ImageView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginBottom="8dp"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/product_name_TextView"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/product_no_product_selected" />

        <TextView
            android:id="@+id/product_description_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_no_product_selected" />

        <TextView
            android:id="@+id/product_brand_TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_no_product_selected" />

        <TextView
            android:id="@+id/product_qty_TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/product_no_product_selected" />


        <LinearLayout
            android:id="@+id/product_unit_detail_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:background="@color/grey_300"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/unit_detail_text"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/product_unit_name_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/product_no_product_selected" />

            <TextView
                android:id="@+id/product_unit_description_TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:text="@string/product_no_product_selected" />

            <TextView
                android:id="@+id/product_unit_quantity_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:text="@string/product_no_product_selected" />


            <Button
                android:id="@+id/view_unit_detail_button"
                style="@style/Widget.AppCompat.Button.Borderless.Colored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginTop="8dp"
                android:text="@string/view_unit_detail"
                android:textAlignment="center"
                 />

        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>



